@model IEnumerable<Tidtabell.Models.Time>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClockTime.TimeOfDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @{
                        var fullTime = (item.ClockTime.Hour < 10 ? "0" + item.ClockTime.Hour : item.ClockTime.Hour) + ":" + (item.ClockTime.Minute < 10 ? "0" + item.ClockTime.Minute : item.ClockTime.Minute);
                        @Html.DisplayFor(modelItem => fullTime)
                    }
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
