@model Tidtabell.Models.Join_Tables.LineStops

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LineStops</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LineId" class="control-label"></label>
                <select asp-for="LineId" class ="form-control" asp-items="ViewBag.LineId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StopId" class="control-label"></label>
                <select asp-for="StopId" class ="form-control" asp-items="ViewBag.StopId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StopPosition" class="control-label"></label>
                <input asp-for="StopPosition" class="form-control" />
                <span asp-validation-for="StopPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input type="time" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Reverse" /> @Html.DisplayNameFor(model => model.Reverse)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
